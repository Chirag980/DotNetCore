@page
@model DotNetRazor.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				CATEGORY LIST
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>  CREATE NEW CATEGORY
			</a>
		</div>
	</div>
	@* <h1>category list</h1> *@
	<table class="table table-bordered  table-striped">
		<thead>
			<tr>
				<th>
					CATEGORY NAME
				</th>
				<th>
					DISPLAY ORDER
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.CategoryList.OrderBy(x => x.DisplayOrder))//We can simple run the C# code in the cshtml file also we have Model in the foreach loop from there we are connecting to the top @model
			{
				<tr>
					<td>@obj.Name</td> @* Now by using dot notation we can get the particular data *@
					<td>@obj.DisplayOrder</td>
					<td>
						<a asp-page="/Categories/Edit" asp-route-Id="@obj.Id" class="btn btn-primary">
							<i class="bi bi-pencil-square"></i>Edit
						</a>
					</td>
					<td>
						<a asp-page="/Categories/Delete" asp-route-Id="@obj.Id" class="btn btn-danger">
							<i class="bi bi-trash3-fill"></i>Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>